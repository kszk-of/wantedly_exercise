<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section>
			<%= render 'shared/skill_form' %>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="col-md-8">
		<h3>Skill Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to Exercise</h1>
		<%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>